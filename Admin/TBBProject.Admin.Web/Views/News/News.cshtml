@model NewsVM
<div class="card animate fadeUp">
    <div class="card-move-up waves-effect waves-block waves-light">
        <div class="move-up white darken-1" style="min-height:500px;">
            <form asp-controller="News" asp-action="NewsSearchPost" id="NewsForm"
                  data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-mode="replace"
                  data-ajax-update="#content">
                <div class="row">
                    <div class="col s4">
                        <div class="editor-label">
                            @Html.LabelFor(i => i.IsReleaseSearch)
                        </div>
                        <div class="editor-field">
                            @(Html.Kendo().DropDownListFor(p=>p.IsReleaseSearch)
                                    .HtmlAttributes(new { style = "width:100%" })
                                    .OptionLabel(@Localizer[LocalizationCaptions.IsRelease].Value)
                                    .DataTextField("Name")
                                    .DataValueField("Id")
                                    .DataSource(source =>
                                    {
                                        source.Read(read =>
                                        {
                                            read.Action("Get_YesNoEnumList", "Definitions");
                                        });
                                    }))
                        </div>
                    </div>
                    <div class="col s4">
                        <div class="editor-label">
                            @Html.LabelFor(i => i.ReleaseDateSearch)
                        </div>
                        <div class="editor-field">
                            @(Html.Kendo().DatePickerFor(i=>i.ReleaseDateSearch).Culture("tr-TR")
                .Value(DateTime.Now).Format("{0:dd.MM.yyyy}")
                .HtmlAttributes(new { style = "width: 100%" })
                .DateInput()
            )
                        </div>
                    </div>
                </div>
                <div class="row" style="padding-bottom:20px;">
                </div>
                <div class="row">
                    <div class="col s8">

                    </div>
                    <div class="col s2">
                        <button class="buttonConfirm" type="submit">
                            @Localizer[LocalizationCaptions.Filter].Value
                        </button>
                    </div>
                    <div class="col s2">
                        <button class="buttonClear" type="reset" id="resetButton">
                            @Localizer[LocalizationCaptions.Clear].Value
                        </button>
                    </div>
                </div>
            </form>
            <div id="content">


            </div>


        </div>
    </div>
</div>
<script>
    function addNews(e) {
        $('#popupWindowDiv').load('/NewsAdd/' + e);
        $("#windowPopUp").data("kendoWindow").open();
        $("#windowPopUp").data("kendoWindow").setOptions({
            title: "Haber Düzenle"
        });
    }
    function updateNews(e) {
        $('#popupWindowDiv').load('/NewsUpdate/'+e);
        $("#windowPopUp").data("kendoWindow").open();
        $("#windowPopUp").data("kendoWindow").setOptions({
            title: "Haber Düzenle"
        });
    }

    function deleteNews(e) {
        $.ajax({
            type: "POST",
            url: "/News/EditingNews_Destroy",
            data: {
                'Id': e,
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
        $("#NewsForm").submit();
    }

    function updateNewsLang(e) {
        $('#popupWindowDiv').load('/NewsLangUpdate/' + e);
        $("#windowPopUp").data("kendoWindow").open();
        $("#windowPopUp").data("kendoWindow").setOptions({
            title: "Haber Dil Düzenle"
        });
    }

    function ajaxSuccess() {
        $('#popupWindowDiv').html("");
        $("#windowPopUp").data("kendoWindow").close();
        $("#grid").data("kendoGrid").dataSource.read();
    }

    $("#resetButton").click(function () {
        $('#NewsForm').trigger("reset");
        $("#NewsForm").submit();
    });
    $(document).ready(function () {
        $("#NewsForm").submit();
    });
    function dataBound() {
        this.expandRow(this.tbody.find("tr.k-master-row").first());
    }

    function sync_handler(e) {
        this.read();
    }

</script>
