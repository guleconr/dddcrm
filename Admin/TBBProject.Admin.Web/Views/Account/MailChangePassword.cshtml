@{
    Layout = "/Views/Shared/_LayoutGiris.cshtml";
}
@model ChangePasswordVM
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <form action="/MailChangePassword" id="changePassForm" method="post" class="box">
                    <input data-val="true" data-val-required="Required" id="NewPassword" name="NewPassword" type="password" placeholder="Yeni Şifre">
                    <input data-val="true" data-val-required="Required" id="RepeatNewPassword" name="RepeatNewPassword" type="password" placeholder="Yeni Şifre Tekrar">
                    <input type="submit" name="" value="Değiştir">
                    @Html.HiddenFor(i=>i.Email)
                </form>
            </div>
        </div>
    </div>
</div>
