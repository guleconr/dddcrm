@{
    Layout = "/Views/Shared/_LayoutGiris.cshtml";
}
@model UserLoginVM
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-controller="Account" asp-action="login" id="loginForm" class="box">
                <h1>@Localizer[LocalizationCaptions.TbbLogin].Value</h1>
                <p class="text-muted"> @Localizer[LocalizationCaptions.UsernamePass].Value</p>
                @Html.TextBoxFor(i => i.Email, new { placeholder = @Localizer[LocalizationCaptions.Email].Value, @class = "form-input" })
                @Html.ValidationMessageFor(i => i.Email)
                @Html.TextBoxFor(i => i.Password, new { type = "password", placeholder = @Localizer[LocalizationCaptions.Password].Value })
                @Html.ValidationMessageFor(i => i.Password)
                <div class="col s12" style="text-align:center">

                    <a class="forgot text-muted" href="/ForgotPassword">@Localizer[LocalizationCaptions.ForgotPassword].Value</a>
                </div>

