                <div class="row">
                    <div class="col-8">

                    </div>
                    <input type="submit" name="" value="@Localizer[LocalizationCaptions.Login].Value">
                </div>

            </form>
        </div>
    </div>
</div>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                var message = '@ViewBag.Message';
                toastr.info(message);
            };
    </script>
}